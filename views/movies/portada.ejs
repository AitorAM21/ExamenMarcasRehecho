<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>PaginaPelis</title>
    <%- include('../base_header.ejs') -%> 
</head>
<body>
    <div class="container-fluid">
        <div class="row">    
            <%- include('../base_menu.ejs') -%> 
            <div id="admin-main-control" class="col-md-10 p-x-3 p-y-1">
                <div class="content-title m-x-auto">
                    <i class="fa fa-dashboard"></i>
                </div>
                <p class="display-4"></p>
                <p class="text-primary">Ultimas peliculas</p>

                <% for (var i = 0; i < movies.length; i++) { %>
                    <tr>
                        <div class="card">
                            <!-- Cover -->
                            <div class="card__cover">
                                <td><%= movies[i].poster_path %></td>
                            </div>
                        
                            <!-- Content -->
                            <div class="card__content">
                                <td><%= movies[i].title %></td>
                                
                            </div>
                            <td><%= movies[i].id %></td>
                        </div>
                    </tr>
                <% } %>
                
                </p>
            </div> <!-- /#admin-main-control -->
        </div> <!-- /.row -->
    </div> <!-- /.container-fluid -->
    

</body>
</html>